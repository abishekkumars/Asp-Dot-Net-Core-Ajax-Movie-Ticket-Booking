<style>
    .table{
        background-color:darkcyan;
        width:35%;
    }
    </style>
<div>
    <form>
        <table class="table table-dark">
            <tr>
                <td><label>Id</label></td>
                <td>:</td>
                <td><input id="txtId" type="text" /></td>
            </tr>
            <tr>
                <td><label>Movie Name</label></td>
                <td>:</td>
                <td><input id="txtMovieName" type="text" /></td>
            </tr>
            <tr>
                <td><label>Descriptions</label></td>
                <td>:</td>
                <td><input id="txtdescriptions" type="text" /></td>
            </tr>
            <tr>
                <td><label>Movie Type</label></td>
                <td>:</td>
                <td><input id="txtmovietype" type="text" /></td>
            </tr>
            <tr>
                <td><label>Languages </label></td>
                <td>:</td>
                <td><input id="txtlanguages" type="text" /></td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td><input id="btnSubmit" type="button" value="Submit" /></td>
            </tr>
        </table>
    </form>
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript">

                $(document).ready(function () {

                    $("#btnSubmit").click(function () {
                        var movie1 = new Object();
                        movie1.id = $('#txtId').val();
                        movie1.movieName = $('#txtMovieName').val();
                        movie1.descriptions = $('#txtdescriptions').val();
                        movie1.movie_Type = $('#txtmovietype').val();
                        movie1.languages = $('#txtlanguages').val();
                $.ajax({
                type: "POST",
                    url: "http://localhost:9549/api/Movie/InsertMovie",
                    crossDomain: true,
                    data: JSON.stringify(movie1),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                    success: function (response) {
                        alert(response);
                        console.log(response);
                },
                failure: function (response) {
                debugger;
                alert(response.responseText);
                },
                error: function (response) {
                debugger;
                alert(response.responseText);
                }
         });
     });
  });
</script>